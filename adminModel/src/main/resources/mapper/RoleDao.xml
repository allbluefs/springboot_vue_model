<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allblue.modules.sys.dao.RoleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.allblue.modules.sys.entity.RoleEntity" id="roleMap">
        <result property="roleId" column="role_id"/>
        <result property="roleName" column="role_name"/>
        <result property="remark" column="remark"/>
        <result property="deptId" column="dept_id"/>
        <result property="createTime" column="create_time"/>
    </resultMap>
    <select id="getRoleByUserId" resultType="com.allblue.modules.sys.entity.RoleEntity">
        select r.* from sys_role r,sys_user_role ur where r.role_id=ur.role_id and ur.user_id=#{userId}

    </select>
    <select id="getRoleIdByName" resultType="java.lang.Long">
        select role_id from sys_role where role_name=#{roleName}

    </select>
    <!--根据用户ID查询角色-->
    <select id="selectByUserId" resultType="com.allblue.modules.sys.entity.RoleEntity">
        select r.* from sys_user_role ur LEFT JOIN sys_role r ON ur.role_id=r.role_id
        where ur.user_id=#{userId}
    </select>
</mapper>
