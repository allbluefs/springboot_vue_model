<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.allblue.modules.sys.dao.UserRoleDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.allblue.modules.sys.entity.UserRoleEntity" id="userRoleMap">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
    </resultMap>
    <select id="queryRoleIdList" resultType="java.lang.Long">
        select role_id from sys_user_role where user_id = #{value}
    </select>
    <!--根据用户ID查询角色-->
    <select id="selectByUserId" resultType="com.allblue.modules.sys.entity.UserRoleEntity">
        select ur.* from sys_user_role ur LEFT JOIN sys_role r ON ur.role_id=r.role_id
        where ur.user_id=#{userId}
    </select>

</mapper>
